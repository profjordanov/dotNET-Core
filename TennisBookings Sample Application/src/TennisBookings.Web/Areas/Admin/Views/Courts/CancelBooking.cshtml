@model TennisBookings.Web.Areas.Admin.ViewModels.CancelBookingConfirmationViewModel
@{
    ViewData["Title"] = "Confirm Booking Cancellation";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-12">
        <h2>Are you sure you wish to delete the following booking?</h2>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <h3>@Model.Date.ToString("D")</h3>
        <p><strong>@Model.CourtName</strong>: @Model.StartTime to @Model.EndTime</p>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <form method="POST">
            <div class="row">
                <div class="col-md-2">
                    <br />
                    <input asp-for="BookingId" type="hidden" />
                    <input type="submit" name="submitButton" value="Confirm" class="btn btn-success" />
                    <input type="submit" name="submitButton" value="Cancel" class="btn btn-warning" />
                </div>
            </div>
        </form>
    </div>
</div>
